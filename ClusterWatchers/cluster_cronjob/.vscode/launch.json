{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Cluster Info Collector",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/collect_info.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "API_ENDPOINT": "https://cluster-info.k8s.blacktoaster.com"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}